<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="40dp"
    android:paddingTop="40dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/settings_tag"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:srcCompat="@drawable/settings_tag"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/settings_trash"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:srcCompat="@drawable/settings_trash"
            tools:ignore="contentDescription" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/settings_columns"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:srcCompat="@drawable/settings_columns_2"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/settings_theme"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:srcCompat="@drawable/settings_night"
            tools:ignore="contentDescription" />

    </TableRow>

</TableLayout>